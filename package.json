{
  "name": "node-draft",
  "version": "1.0.0",
  "description": "node-draft",
  "main": "index.js",
  "scripts": {
    "start": "export \"NODE_ENV=local\" && tsc && \"node dist/index.js\"",
    "debug": "export \"NODE_ENV=local\" && tsc-watch --onSuccess \"node --inspect dist/index.js\"",
    "debug-brk": "export \"NODE_ENV=local\" && tsc-watch --onSuccess \"node --inspect-brk dist/index.js\"",
    "lint": "npx eslint --ext .js,.ts ./src",
    "lint.file": "npx eslint --fix ./src/_stubs/**",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.1",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mongodb": "^3.3.6",
    "@types/ms": "^0.7.31",
    "@types/node": "^12.11.2",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "eslint": "^6.6.0",
    "eslint-config-standard-with-typescript": "^10.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "tsc-watch": "^4.0.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.3.3",
    "uuid": "^3.3.3"
  },
  "eslintConfig": {
    "extends": [
      "standard-with-typescript"
    ],
    "env": {
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/strict-boolean-expressions": 0,
      "@typescript-eslint/consistent-type-definitions": 0,
      "@typescript-eslint/promise-function-async": [
        "error",
        {
          "checkArrowFunctions": false
        }
      ],
      "no-multiple-empty-lines": [2, { "max": 2, "maxEOF": 1, "maxBOF": 1 }]
    }
  }
}
