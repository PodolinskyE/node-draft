{
  "compilerOptions": {
    "locale": "ru",
    "target": "es2018",
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "tmp"
  ]
}

